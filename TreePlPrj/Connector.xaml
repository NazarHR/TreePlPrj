<UserControl x:Class="TreePlPrj.Connector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TreePlPrj"
             mc:Ignorable="d" 
             Name="connector"
             d:DesignHeight="400" d:DesignWidth="400"
             MinHeight="8"
             MinWidth="8"
             Width="8"
             Height="8"
             Cursor="Cross"
             SnapsToDevicePixels ="True"
             MouseLeftButtonDown="Connector_MouseLeftButtonDown"
             MouseLeftButtonUp="Connector_MouseLeftButtonUp">
    <Grid>
        <Ellipse Fill="Transparent" Margin="-2"/>
        <Ellipse Fill="Lavender" StrokeThickness="1" Stroke="#AA000080"/>
    </Grid>
</UserControl>
